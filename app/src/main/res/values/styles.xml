<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Local copy of android:Theme.Holo.Dialog.Alert -->
    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

   <!-- Creating a custom alertDialog -->
    <style name="Theme_Custom_Dialog_Alert" parent="@style/Theme_Holo_Dialog_Alert">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Custom</item>
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Custom.Medium</item>
    </style>

    <!-- Styling the title window appearance -->
    <style name="DialogWindowTitle.Custom" parent="@style/DialogWindowTitle_Holo">
        <item name="android:layout_height">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Custom.DialogWindowTitle</item>
    </style>

    <!-- Styling the title text appearance -->
    <style name="TextAppearance.Custom.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Styling the message appearance -->
    <style name="TextAppearance.Custom.Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Styling the buttons appearance -->
    <style name="Widget.Custom.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textAppearance">@style/TextAppearance.Custom.DialogButton</item>
    </style>

    <style name="TextAppearance.Custom.DialogButton" parent="@android:style/TextAppearance.Holo.Medium"/>

    <style name="Custom.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@android:color/holo_purple</item>
    </style>

</resources>
